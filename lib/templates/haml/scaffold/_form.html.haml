= form_for(@<%= singular_table_name %>) do |s| 
  <%- attributes.each do |attribute| -%>
    .form-group{:class => has_error(@<%= singular_table_name %>, :<%= attribute.name %>)}
      = f.label :<%= attribute.name %>
      = f.text_field :<%= attribute.name %>, class: "form-control"
      = field_errors(@<%= singular_table_name %>,  :<%= attribute.name %>)
  <%- end -%>
  = f.submit class: "btn btn-primary"
