.col-md-6.col-md-offset-3
  .box.box-body-md
    = form_for([@space, @meetingroom, @booking]) do |f| 
      .form-group{:class => has_error(@booking, :member_id)}
        = f.label :member
        = f.collection_select :member_id, @space.members, :id, :name, {allow_blank: false }, {class: "form-control"}
        = field_errors(@booking,  :member)
      .form-group{:class => has_error(@booking, :starting)}
        = f.label :starting
        .form-control
          = f.datetime_select :starting, {minute_step: 15}, {class: ""}
        = field_errors(@booking,  :starting)
      .form-group{:class => has_error(@booking, :ending)}
        = f.label :ending
        .form-control
          = f.datetime_select :ending, {minute_step: 15}, {class: ""}
        = field_errors(@booking,  :ending)
      = f.submit class: "btn btn-primary" 
      or 
      = link_to "Cancel", :back

