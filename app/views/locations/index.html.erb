<h1>Listing locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= link_to 'Show', [@space, location] %></td>
        <td><%= link_to 'Edit', edit_space_location_path(@space, location) %></td>
        <td><%= link_to 'Destroy', [@space, location], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_space_location_path(@space) %>
