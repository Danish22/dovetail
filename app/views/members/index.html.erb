

<div class="row" style="margin-bottom:25px;">
  <div class="col-md-12">
    <%= link_to "New Member", new_space_member_path(@space), class: "btn btn-primary pull-right" -%>
  </div>
</div>

<div class="row">
  <div id="members">
    <% @members.each do |member| %>
      <div class="col-md-2 col-xs-6 text-center" style="margin-bottom:0px;">
        <div class="well member-card">
          <img class="img-thumbnail" style="margin-bottom:10px;" src="<%= member.gravatar_url(:size =>80, :rating => 'G', :secure => true, :default => 'identicon') -%>"/><br/>
          <%= member.name %><br/>
          <%= member.email %><br/>
          <br/>
          <a href="<%= space_member_path(@space, member)%>" class="btn btn-primary">View</a>
        </div>
      </div>
      
    <% end %>
  </div>
</div>

