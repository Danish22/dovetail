/ BEGIN LOGIN WINDOW
.login-container.box
  .container-fluid
    .row-fluid
      .col-md-12.text-center
        %img{:height => "60px", :src => "/img/logo-d.png"}/
    .row-fluid
      .col-md-12.greeting
        Create Your Account.
    .row-fluid
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        = f.hidden_field :invite_token, value: (params[:invite_token] || (params[:user] ? params[:user][:invite_token] : nil))
        = f.hidden_field :promo_code, value: (params[:promo_code] || (params[:user] ? params[:user][:promo_code] : nil))
        .form-group
          .col-md-12
            = f.text_field :full_name, autofocus: true, class: "form-control", id: "full_name", placeholder: "Your name, if you please..."
        .form-group
          .col-md-12
            = f.email_field :email, class: "form-control", id: "email", placeholder: "What's your email address?"
        .form-group
          .col-md-12
            = f.password_field :password, autocomplete: "off", class: "form-control", id: "password", placeholder: "Choose a password"
        .form-group
          .col-md-12
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "password", placeholder: "Enter that password again"
        .row-fluid.text-center
          .col-md-12
            %button.btn.btn-warning.btn-block.btn-login#submit_form{type: "submit"}
              Create Account
          .col-md-12
            = link_to "Have an account already?", new_user_session_path, class: "forgot-password"
  / /END LOGIN WINDOW
