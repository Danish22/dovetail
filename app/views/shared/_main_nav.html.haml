%nav.navbar.navbar-default{role: "navigation"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{:type => "button", "data-toggle" => "collapse", "data-target" => "#bs-example-navbar-collapse-1"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

  .collapse.navbar-collapse#bs-example-navbar-collapse-1
    %ul.nav.navbar-nav
      %li.pull-left
        %a.navbar-brand{href: "/"}
          %img{src: "/img/logo-w.png", height: "40px"}

      %li{class: active_tab("members")}
        - if @space
          %a{ href: space_members_path(@space)}
            %span.glyphicon.glyphicon-user{ "aria-hidden" => "true"}
            Members
      %li{class: active_tab("activities")}
        - if @space
          %a{ href: space_activities_path(@space)}
            %span.glyphicon.glyphicon-flash{ "aria-hidden" => "true"}
            Activity
      %li{class: active_tab("insights")}
        - if @space
          %a{ href: space_insights_path(@space)}
            %span.glyphicon.glyphicon-stats{ "aria-hidden" => "true"}
            Insights
      %li{class: active_tab(["spaces", "locations", "admins", "resources", "plans", "integrations", "stripes"])}
        - if @space
          %a{ href: edit_space_path(@space)}
            %span.glyphicon.glyphicon-cog{ "aria-hidden" => "true"}
            Manage

      %li.dropdown.pull-right
        %a.dropdown-toggle{href: "#", "data-toggle" => "dropdown"}
          %img.avatar{src: current_user.gravatar_url(:size =>44, :rating => 'G', :secure => true, :default => 'mm')}
          %b.caret
        %ul.dropdown-menu{:style => "right:0;left:auto;"}
          %li
            %a{:href=> edit_user_registration_path}
              Account Settings
          %li.divider
          - spaces = current_user.spaces.order("created_at asc")
          - if spaces.count > 0
            - spaces.each do |s|
              %li
                %a{:href=> space_members_path(s)}
                  - if @space && @space.id == s.id
                    %span{style: "color:green"}
                      &#8226;
                  - else
                    %span{style: "color:#eee"}
                      &#8226;
                  = s.name                        
            %li.divider
          %li
            = link_to("Sign out",  destroy_user_session_path, :method => :delete)

