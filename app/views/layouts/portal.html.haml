!!! 5
%html
  %head
    %title Dovetail

    %meta{'charset' => "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", 'content' => "IE=edge"}
    %meta{'name' => "viewport", 'content' => "width=device-width", 'initial-scale' => "1.0"}

    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body.page-body

    .container
      - flash.each do |key, value|
        %div{ :class => flash_class(key), :style => "margin-top:25px;" }
          = value

    .container
      - if !current_member.nil?
        - if !current_member.provider.nil?
          %div{style: "padding:20px;margin-top:20px;", class: "text-center"}
            %h3
              = @space.name
          %div{style: "", class: "text-center"}         
            Welcome #{current_member.name}
            = link_to "Sign out", "/logout", class: "btn btn-default"
          = yield
        - else
          = render "signup"
      - else
        = render "signin"

    = yield :javascript

